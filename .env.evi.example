# Evi Integration Environment Configuration
# Copy this file to .env and configure your API keys

# ===========================================
# AI PROVIDER CONFIGURATIONS
# ===========================================

# LocalAI (Mistral) - Priority 1
# Run LocalAI server locally or use remote endpoint
LOCALAI_HOST=http://localhost:8080/v1
LOCALAI_API_KEY=localai

# OpenAI GPT-4 - Priority 2
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude - Priority 3
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq (Alternative fast inference)
# Get your API key from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# ===========================================
# EVI INTEGRATION SETTINGS
# ===========================================

# Debug mode for enhanced logging
NODE_ENV=development

# Evi integration timeouts (milliseconds)
EVI_TIMEOUT=30000
EVI_RETRY_ATTEMPTS=3
EVI_DEBUG=true

# ===========================================
# MANUS MCP SERVER INTEGRATION
# ===========================================

# Manus API configuration (from your Zapier MCP setup)
MANUS_API_URL=https://api.manus.com/v1
MANUS_API_KEY=your_manus_api_key_here

# ===========================================
# MONITORING AND LOGGING
# ===========================================

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=3001

# ===========================================
# ZAPIER INTEGRATION (Optional)
# ===========================================

# Zapier webhook URLs for automation
ZAPIER_WEBHOOK_SUCCESS=https://hooks.zapier.com/hooks/catch/your_success_hook
ZAPIER_WEBHOOK_ERROR=https://hooks.zapier.com/hooks/catch/your_error_hook

# ===========================================
# ADVANCED CONFIGURATIONS
# ===========================================

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Content generation defaults
DEFAULT_MAX_TOKENS=1000
DEFAULT_TEMPERATURE=0.7
DEFAULT_TIMEOUT=30000

# Streaming configurations
STREAM_CHUNK_SIZE=1024
STREAM_MAX_DURATION=60000

# Health check intervals
HEALTH_CHECK_INTERVAL=300000  # 5 minutes
HEALTH_CHECK_TIMEOUT=10000    # 10 seconds