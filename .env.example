# The Lab Verse Monitoring Stack - Environment Configuration
# Copy this file to .env.local and fill in your actual API keys
# NEVER commit .env.local to version control!

# =============================================================================
# AI API KEYS - Primary Intelligence Providers
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id-here

# Anthropic Claude Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Alibaba DashScope (Qwen) Configuration
DASHSCOPE_API_KEY=sk-your-dashscope-qwen-key-here

# Moonshot AI Configuration
MOONSHOT_API_KEY=sk-your-moonshot-key-here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_RETENTION=15d

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_URL=http://localhost:3001

# =============================================================================
# INFRASTRUCTURE & DATABASES
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# PostgreSQL (Optional - for advanced features)
POSTGRES_URL=postgresql://labverse:labverse123@localhost:5432/labverse
POSTGRES_PASSWORD=labverse123

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#monitoring-alerts

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=labverse-jwt-secret-key-production-2024-minimum-32-chars

# API Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration (for repository monitoring)
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Docker Hub (for image management)
DOCKER_HUB_USERNAME=your-docker-username
DOCKER_HUB_PASSWORD=your-docker-password

# =============================================================================
# KIMI INSTRUCT CONFIGURATION
# =============================================================================

# Human Oversight Settings
HUMAN_OVERSIGHT_MODE=collaborative
AUTO_EXECUTION_THRESHOLD=0.75
MAX_CONCURRENT_TASKS=15

# Budget and Risk Management
PROJECT_BUDGET=100000
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.95

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment Mode
NODE_ENV=production
PYTHON_ENV=production

# Debug Settings  
DEBUG_LEVEL=INFO
LOG_LEVEL=INFO

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/labverse_test

# =============================================================================
# OLLAMA & LOCAL AI
# =============================================================================

# Ollama Configuration (for local AI models)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_MIXTRAL=mixtral:8x7b-instruct
OLLAMA_MODEL_QWEN=qwen2:7b

# =============================================================================
# COMPETITIVE INTELLIGENCE
# =============================================================================

# Market Analysis APIs (Optional)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key

# =============================================================================
# REVENUE OPTIMIZATION
# =============================================================================

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Analytics
GOOGLE_ANALYTICS_ID=GA-your-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# Revenue Intelligence
TARGET_MRR=75000
OPTIMIZATION_FREQUENCY_HOURS=6
A2A_NEGOTIATION_ENABLED=true

# Security Hardening
ENABLE_QUANTUM_GUARD=true
ENABLE_EBPF_MONITORING=true
SECURITY_SCAN_FREQUENCY=daily

# Performance Optimization
ENABLE_PREDICTIVE_SCALING=true
COLD_START_OPTIMIZATION=true
COST_OPTIMIZATION_ENABLED=true