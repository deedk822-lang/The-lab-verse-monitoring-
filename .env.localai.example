# Lab-Verse LocalAI Priority Configuration
# Optimized for maximum cost savings and privacy

# ===================
# LocalAI Configuration (Primary)
# ===================
USE_LOCAL=true
LOCAL_PRIORITY=true
LOCALAI_BASE_URL=http://localhost:8080
LOCALAI_API_KEY=
LOCALAI_THREADS=4
LOCALAI_CONTEXT_SIZE=4096

# GPU Configuration (Optional)
GPU_LAYERS=0
CUDA_VISIBLE_DEVICES=0

# ===================
# N8N Configuration
# ===================
N8N_USER=admin
N8N_PASSWORD=localai123
N8N_HOST=localhost
N8N_PORT=5678
TIMEZONE=UTC
N8N_LOG_LEVEL=info

# ===================
# Fallback Providers (Optional - for redundancy only)
# ===================
# Hugging Face (Low cost backup)
HUGGINGFACE_API_KEY=your_huggingface_key_here_optional
HUGGINGFACE_ENABLED=false

# OpenRouter (Premium backup)
OPENROUTER_API_KEY=your_openrouter_key_here_optional
OPENROUTER_ENABLED=false
OPENROUTER_SITE_URL=https://lab-verse.local

# ===================
# Cost Control Settings
# ===================
# Maximum cost per request (USD)
MAX_COST_PER_REQUEST=0.001

# Disable expensive models
DISABLE_EXPENSIVE_MODELS=true

# Daily cost limit (USD)
DAILY_COST_LIMIT=1.00

# ===================
# Performance Settings
# ===================
# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Max tokens per request
MAX_TOKENS_PER_REQUEST=1000

# Enable request caching
ENABLE_CACHING=true
CACHE_TTL=3600

# ===================
# Monitoring (Optional)
# ===================
# Enable metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana settings
GRAFANA_PASSWORD=admin123
GRAFANA_ENABLED=false

# ===================
# Database (Minimal)
# ===================
# Use SQLite for minimal setup
DB_TYPE=sqlite
DB_PATH=./data/lab-verse.db

# PostgreSQL (if needed)
POSTGRES_ENABLED=false
POSTGRES_DB=lab_verse
POSTGRES_USER=lab_verse_user
POSTGRES_PASSWORD=secure_password_123

# ===================
# Security Settings
# ===================
API_KEY_ENABLED=false
API_KEY=your_api_key_here
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5678

# ===================
# Development Settings
# ===================
DEV_MODE=true
DEBUG_LOGGING=true
HOT_RELOAD=true