name: Test Analytics

on:
  schedule:
    - cron: '0 2 * * *'  # Daily at 2 AM UTC
  workflow_dispatch:
  pull_request:
    branches: [ main ]

jobs:
  analyze:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      - name: Run full test analysis
        run: |
          npm run test:analyze
          npm run test:coverage
        env:
          CI: true
          NODE_ENV: test
      
      - name: Generate test report
        if: always()
        run: |
          node scripts/generate-test-report.js
      
      - name: Upload test metrics
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: test-metrics-${{ github.run_number }}
          path: |
            test-results/
            coverage/
            test-metrics.json
          retention-days: 30
      
      - name: Upload coverage to artifact
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: coverage-report-${{ github.run_number }}
          path: coverage/
          retention-days: 30
      
      - name: Comment on PR
        if: github.event_name == 'pull_request'
        uses: actions/github-script@v6
        with:
          script: |
            const fs = require('fs');
            
            // Read metrics file if it exists
            let metrics;
            try {
              metrics = JSON.parse(fs.readFileSync('./test-metrics.json', 'utf8'));
            } catch (error) {
              console.log('No metrics file found, skipping comment');
              return;
            }
            
            // Format status emoji
            const statusEmoji = metrics.healthScore >= 90 ? 'ğŸŸ¢' : 
                               metrics.healthScore >= 70 ? 'ğŸŸ¡' : 'ğŸ”´';
            
            // Build coverage status
            const coverageRows = [
              ['Lines', metrics.coverage.lines, metrics.thresholds.lines],
              ['Statements', metrics.coverage.statements, metrics.thresholds.statements],
              ['Functions', metrics.coverage.functions, metrics.thresholds.functions],
              ['Branches', metrics.coverage.branches, metrics.thresholds.branches]
            ].map(([metric, current, target]) => {
              const status = current >= target ? 'âœ…' : 'âŒ';
              return `| ${metric} | ${current}% | ${target}% | ${status} |`;
            }).join('\n');
            
            const comment = `
            ## ğŸ“Š Test Performance Report ${statusEmoji}
            
            **Health Score:** ${metrics.healthScore}/100
            **Total Tests:** ${metrics.totalTests} (${metrics.passed} passed, ${metrics.failed} failed)
            **Duration:** ${metrics.duration}ms
            
            ### Coverage Summary
            | Metric | Current | Target | Status |
            |--------|---------|--------|---------|
            ${coverageRows}
            
            ### Performance Metrics
            - **Average Test Duration:** ${metrics.avgTestDuration}ms
            - **Slowest Test:** ${metrics.slowestTest?.name || 'N/A'} (${metrics.slowestTest?.duration || 0}ms)
            - **Test Efficiency:** ${metrics.efficiency}%
            
            [ğŸ“ˆ View detailed report](https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }})
            `;
            
            github.rest.issues.createComment({
              issue_number: context.issue.number,
              owner: context.repo.owner,
              repo: context.repo.repo,
              body: comment
            });
      
      - name: Check coverage thresholds
        run: |
          node scripts/check-coverage-thresholds.js
