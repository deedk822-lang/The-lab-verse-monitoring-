#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Validate package.json
if [ -f package.json ]; then
  echo "Validating package.json..."
  
  # Check for merge conflict markers
  if grep -q "^<<<<<<< \|^======= \|^>>>>>>> " package.json; then
    echo "âŒ ERROR: Merge conflict markers found in package.json!"
    echo "Please resolve conflicts before committing."
    exit 1
  fi
  
  # Validate JSON syntax
  if ! node -e "JSON.parse(require('fs').readFileSync('package.json', 'utf8'))" 2>/dev/null; then
    echo "âŒ ERROR: package.json is not valid JSON!"
    echo "Please fix JSON syntax errors before committing."
    exit 1
  fi
  
  echo "âœ… package.json is valid"
fi

# Validate all JSON files
echo "Validating all JSON files..."
JSON_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.json$' || true)

if [ -n "$JSON_FILES" ]; then
  for file in $JSON_FILES; do
    if [ -f "$file" ]; then
      echo "Checking $file..."
      
      # Check for merge conflicts
      if grep -q "^<<<<<<< \|^======= \|^>>>>>>> " "$file"; then
        echo "âŒ ERROR: Merge conflict markers in $file"
        exit 1
      fi
      
      # Validate JSON
      if ! node -e "JSON.parse(require('fs').readFileSync('$file', 'utf8'))" 2>/dev/null; then
        echo "âŒ ERROR: Invalid JSON in $file"
        exit 1
      fi
    fi
  done
  echo "âœ… All JSON files are valid"
else
  echo "â„¹ï¸  No JSON files to validate"
fi

# Run lint-staged (re-add this)
echo "
ğŸ’… Running lint-staged..."
npx lint-staged

# Run quick test check on staged files (re-add this)
echo "
ğŸ§ª Running tests on staged files..."
npm run test -- --bail --findRelatedTests --passWithNoTests

echo ""
echo "âœ… Pre-commit checks passed!"
echo ""
