# Dockerfile for WordPress Mock API
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.mcp.txt .
RUN pip install --no-cache-dir -r requirements.mcp.txt

# Copy the application code
COPY the-lab-verse-monitoring/wp_mock_api.py ./wp_mock_api.py

# Expose the port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "wp_mock_api:app", "--host", "0.0.0.0", "--port", "8000"]

