# ============================================
# Lab-Verse Monitoring - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# API KEYS (REQUIRED - NO DEFAULTS)
# ============================================
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here-minimum-32-characters

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here-minimum-32-chars

# Internal Content Creator API Key (generate a secure random string)
# Generate with: openssl rand -hex 32
CONTENT_CREATOR_API_KEY=your-generated-secure-api-key-min-32-chars

# Search API Key (for market intelligence)
SEARCH_API_KEY=your-perplexity-or-search-api-key
SEARCH_API_URL=https://api.perplexity.ai/chat/completions

# ============================================
# SECURITY
# ============================================
# JWT Secret for authentication (generate secure random string)
# Generate with: openssl rand -base64 48
JWT_SECRET=your-jwt-secret-minimum-32-characters-required

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# ============================================
# DATABASE
# ============================================
# PostgreSQL Connection
POSTGRES_DB=labverse
POSTGRES_USER=labverse
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis Connection
REDIS_URL=redis://redis:6379

# ============================================
# SERVICE CONFIGURATION
# ============================================
# API Server
API_HOST=0.0.0.0
API_PORT=8080
SERVER_TIMEOUT=30000

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Orchestrator
ORCHESTRATOR_URL=http://orchestrator:8081

# LocalAI
LOCALAI_URL=http://localai:8082

# ============================================
# AI MODEL CONFIGURATION
# ============================================
DEFAULT_MODEL=gpt-4
MAX_TOKENS=2000
TEMPERATURE=0.7

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_WEB_SEARCH=true
FEATURE_ANALYTICS=true
FEATURE_MONITORING=true

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Grafana
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# Sentry (optional)
SENTRY_DSN=

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================
# HubSpot
HUBSPOT_API_KEY=
HUBSPOT_WEBHOOK_SECRET=

# Asana
ASANA_ACCESS_TOKEN=
ASANA_WORKSPACE_ID=

# ============================================
# PERFORMANCE TUNING
# ============================================
# Worker Configuration
UVICORN_WORKERS=4
GUNICORN_WORKERS=4

# Connection Pools
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=3600
CACHE_MARKET_INTEL_TTL=3600
