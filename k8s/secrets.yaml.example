# =============================================================================
# VAAL AI Empire - Secrets Template
# IMPORTANT: DO NOT commit actual secrets! This is a template.
# Create actual secrets using: kubectl create secret generic vaal-secrets --from-env-file=.env
# =============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: vaal-secrets
  namespace: vaal-ai-empire
type: Opaque
stringData:
  database-url: "postgresql://user:password@postgres-service:5432/vaal_ai_empire"
  redis-url: "redis://:password@redis-service:6379/0"
  hf-token: "hf_YOUR_TOKEN_HERE"
  openai-api-key: "sk-YOUR_KEY_HERE"
  secret-key: "your-secret-key-min-32-chars"
  smtp-password: "your-smtp-password"
  webhook-key: "your-webhook-key"
