# Kimi Computer Environment Variables
# Copy this file to .env and fill in your actual values

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Ayrshare API Key (for social media posting)
# Get from: https://ayrshare.com/
AYR_KEY=your_ayrshare_api_key_here

# Make.com Webhook URL
# Create a webhook at: https://www.make.com/en/
MAKE_WEBHOOK=https://hook.us1.make.com/your_webhook_id

# Brave Verification Token
# Get from Brave Creator Dashboard
BRAVE_VERIFICATION_TOKEN=your_brave_verification_token

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Google Customer Match Configuration
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_google_ads_refresh_token
GOOGLE_ADS_CUSTOMER_ID=your_google_ads_customer_id

# Optional: Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id
MAILCHIMP_DC=your_mailchimp_data_center

# Optional: Slack Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Optional: Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://redis:6379/0

# Optional: Additional Social Platform APIs
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_secret=your_facebook_app_secret

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Development/Testing Flags
DEBUG=false
TEST_MODE=false
MOCK_EXTERNAL_APIS=false