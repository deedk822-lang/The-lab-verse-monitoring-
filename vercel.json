{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  
  "env": {
    "NEXT_PUBLIC_API_ENDPOINT": "@api-endpoint"
  },
  
  "build": {
    "env": {
      "NEXT_PUBLIC_API_ENDPOINT": "@api-endpoint"
    }
  },
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://rainmaker-orchestrator.onrender.com/:path*"
    }
  ]
}
