{
  "version": 2,
  "builds": [
    {
      "src": "src/api/generate-article.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "CDATA_CONNECT_API": "@cdata_connect_api",
    "CDATA_API_KEY": "@cdata_api_key",
    "GLM4_API_KEY": "@glm4_api_key",
    "AIRTABLE_BASE_ID": "@airtable_base_id",
    "AIRTABLE_API_KEY": "@airtable_api_key"
  }
}
