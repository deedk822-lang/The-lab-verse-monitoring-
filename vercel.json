{
  "buildCommand": "pip install -r requirements.txt && mypy --strict rainmaker_orchestrator/ api/",
  "outputDirectory": ".",
  "framework": "fastapi",
  "env": {
    "ENVIRONMENT": "production",
    "CI": "true",
    "OPENLIT_OTLP_ENDPOINT": "@OPENLIT_OTLP_ENDPOINT",
    "ZAI_API_KEY": "@ZAI_API_KEY",
    "MISTRAL_API_KEY": "@MISTRAL_API_KEY",
    "REDIS_URL": "@REDIS_URL",
    "NEXT_PUBLIC_API_ENDPOINT": "https://api.labverse.example.com"
  },
  "routes": [
    {
      "src": "/health",
      "dest": "api/server.py"
    },
    {
      "src": "/execute",
      "methods": ["POST"],
      "dest": "api/server.py"
    },
    {
      "src": "/webhook/hubspot",
      "methods": ["POST"],
      "dest": "api/server.py"
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://rainmaker-orchestrator.onrender.com/:path*"
    }
  ],
  "functions": {
    "api/server.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "regions": ["iad1"]
}
