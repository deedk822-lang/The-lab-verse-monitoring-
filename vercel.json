{
  "env": {
    "NEXT_PUBLIC_API_ENDPOINT": "https://api.labverse.example.com"
  },
  "build": {
    "env": {
      "ZAI_API_KEY": "ZAI_API_KEY",
      "PERPLEXITY_API_KEY": "PERPLEXITY_API_KEY",
      "NODE_ENV": "production",
      "NEXT_PUBLIC_API_ENDPOINT": "NEXT_PUBLIC_API_ENDPOINT",
      "NEXT_PUBLIC_EVENT_DATE": "NEXT_PUBLIC_EVENT_DATE"
    }
  },
  "functions": {
    "api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 10
    },
    "api/health": {
      "runtime": "edge"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://rainmaker-orchestrator.onrender.com/:path*"
    }
  ],
  "regions": ["iad1"]
}
