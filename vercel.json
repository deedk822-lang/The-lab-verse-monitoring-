{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "functions": {
    "api/workflows/**/*.ts": {
      "runtime": "edge",
      "maxDuration": 300
    }
  },
  "rewrites": [
    { "source": "/api/monitor", "destination": "/api/workflows/durableMonitor" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
