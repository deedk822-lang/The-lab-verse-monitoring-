{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci --legacy-peer-deps",
  "framework": "vite",
  "nodeVersion": "20.x",
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_PUBLIC_API_ENDPOINT": "@api-endpoint",
      "NEXT_PUBLIC_HUBSPOT_FORM_ID": "@hubspot-form-id",
      "NEXT_PUBLIC_MAILCHIMP_AUDIENCE_ID": "@mailchimp-audience-id",
      "NEXT_PUBLIC_EVENT_DATE": "@event-date"
    }
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  }
}